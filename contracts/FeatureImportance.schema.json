{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Feature Importance Schema",
  "description": "XGBoost feature importance scores",
  "type": "object",
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "feature": {
            "type": "string",
            "description": "Feature name"
          },
          "importance_gain": {
            "type": "number",
            "description": "Average gain when feature is used for splitting",
            "minimum": 0
          },
          "importance_weight": {
            "type": "number",
            "description": "Number of times feature appears in trees",
            "minimum": 0
          }
        },
        "required": ["feature", "importance_gain", "importance_weight"]
      }
    }
  },
  "required": ["data"]
}
